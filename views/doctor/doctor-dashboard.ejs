<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/global/general.css" />
    <link rel="stylesheet" href="../css/local/doctor-dashboard.css"/>
    <title>Document</title>
</head>
<body>
    <%- include("../includes/header.ejs") %>
    <h1 class="headings">PATIENT HISTORY</h1>
    <main>
        <div class="buttons">
            <div class="search">
                <input type="text" id="searchInput" placeholder="Search..." aria-label="Search" />
                <img src="../icon/search.svg" alt="Search Icon" />
            </div>
        </div>
        <div class="table-container">
            <div id="loadingSpinner" style="display:none;">Loading...</div>
            <table>
                <thead>
                    <tr>
                        <th>RHU</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Address</th>
                        <th>Medical Records</th>
                        <th>More information</th>
                    </tr>
                </thead>
                <tbody id="patientsTableBody"></tbody>
            </table>
             <div>
                <% if (currentPage > 1) { %>
                  <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>">Previous</a>
                <% } %>
                <% if (currentPage < totalPages) { %>
                  <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %>">Next</a>
                <% } %>
              </div> 
        </div>

        <!-- pop up for vital sign -->
        <div class="pop-up">
          <div class="head row just-bet">
            <div class="row gap">
              <img src="../icon/broken-hart.svg"/>
              <h2>Vitals sign</h2>
            </div>
            <div>
              <img src="../icon/close.svg" alt="">
            </div>
          </div>
          <div class="info col gap">
            <div class="row gap">
              <div class="row grow">
                <label for="">Name:</label>
                <input type="text" class="under-line-input">
              </div>
              <div class="row">
                <label for="">Date:</label>
                <input type="date" class="under-line-input">
              </div>
            </div>
            <div class="row gap">
              <div class="row">
                <label for="">Age:</label>
                <input type="number" class="under-line-input">
              </div>
              <div class="row">
                <label for="">Sex:</label>
                <input type="text" class="under-line-input">
              </div>
              <div class="row">
                <label for="">Birth:</label>
                <input type="date" class="under-line-input">
              </div>
            </div>
            <div class="row gap">
              <div class="row">
                <label for="">Occupation:</label>
                <input type="text" class="under-line-input">
              </div>
              <div class="row grow">
                <label for="">Parent/s:</label>
                <input type="text" class="under-line-input">
              </div>
            </div>
            <hr>
            <div class="row lgap">
              <div class="col gap">
                <div class="col">
                  <label for="">BP Systolic:</label>
                  <input type="text">
                </div>
                <div class="col">
                  <label for="">Height:</label>
                  <input type="text">
                </div>
                <div class="col">
                  <label for="">Temperature:</label>
                  <input type="text">
                </div>
              </div>
              <div class="col gap">
                <div class="col">
                  <label for="">BP Diastolic:</label>
                  <input type="text">
                </div>
                <div class="col">
                  <label for="">Weight:</label>
                  <input type="text">
                </div>
                <div class="col">
                  <label for="">Respiratory rate:</label>
                  <input type="text">
                </div>
              </div>
              <div class="col gap">
                <div class="col">
                  <label for="">Heart rate:</label>
                  <input type="text">
                </div>
                <div class="col">
                  <label for="">BMI:</label>
                  <input type="text">
                </div>
                <div class="col">
                  <label for="">Blood type:</label>
                  <input type="text">
                </div>
              </div>
            </div>
            <div class="col" style="height: 20vh;">
              <label for="">Nurse note:</label>
              <textarea name="" id="" class="grow"></textarea>
            </div>
          </div>
        </div>

        <!-- pop up for request lab -->
        <div class="pop-up">
          <div class="head row just-bet">
            <div class="row gap">
              <img src="../icon/bottle.svg"/>
              <h2>Request laboratory</h2>
            </div>
            <div>
              <img src="../icon/close.svg" alt="">
            </div>
          </div>
          <div class="info col gap">
            <div class="row gap">
              <div class="row grow">
                <label for="">Name:</label>
                <input type="text" class="under-line-input">
              </div>
              <div class="row">
                <label for="">Date:</label>
                <input type="date" class="under-line-input">
              </div>
            </div>
            <div class="row gap">
              <div class="row">
                <label for="">Age:</label>
                <input type="number" class="under-line-input">
              </div>
              <div class="row">
                <label for="">Sex:</label>
                <input type="text" class="under-line-input">
              </div>
              <div class="row">
                <label for="">Birth:</label>
                <input type="date" class="under-line-input">
              </div>
            </div>
            <div class="row gap">
              <div class="row">
                <label for="">Occupation:</label>
                <input type="text" class="under-line-input">
              </div>
              <div class="row grow">
                <label for="">Parent/s:</label>
                <input type="text" class="under-line-input">
              </div>
            </div>
            <hr>
            <div class="row just-bet gap">
              <div class="col grow">
                <label for="">Categories</label>
                <select name="" id="">
                  <option value="" selected disabled>Select category</option>
                </select>
              </div>
              <div class="col grow">
                <label for="">Services</label>
                <select name="" id="">
                  <option value="" selected disabled>Select services</option>
                </select>
              </div>
            </div>
            <div>
              <button>Add more</button>
            </div>
            <div class="btn-l">
              <button>Print</button>
              <button>Submit</button>
            </div>
          </div>
        </div>

        <!-- pop up for diagnosis-->
         <div class="pop-up" style="display: block;">
          <div class="head row just-bet">
            <div class="row gap">
              <img src="../icon/micro-scope.svg"/>
              <h2>Request laboratory</h2>
            </div>
            <div>
              <img src="../icon/close.svg" alt="">
            </div>
          </div>

          <div class="info col gap">
             <div class="row gap">
              <div class="row grow">
                <label for="">Name:</label>
                <input type="text" class="under-line-input">
              </div>
              <div class="row">
                <label for="">Date:</label>
                <input type="date" class="under-line-input">
              </div>
            </div>
            <div class="row gap">
              <div class="row">
                <label for="">Age:</label>
                <input type="number" class="under-line-input">
              </div>
              <div class="row">
                <label for="">Sex:</label>
                <input type="text" class="under-line-input">
              </div>
              <div class="row">
                <label for="">Birth:</label>
                <input type="date" class="under-line-input">
              </div>
            </div>
            <div class="row gap">
              <div class="row">
                <label for="">Occupation:</label>
                <input type="text" class="under-line-input">
              </div>
              <div class="row grow">
                <label for="">Parent/s:</label>
                <input type="text" class="under-line-input">
              </div>
            </div>
            <hr>
            <div class="col" style="height: 20vh;">
              <label for="">Diagnoses</label>
              <textarea name="" id="" class="grow"></textarea>
            </div>
            <div class="left-btn">
              <button>Submit</button>
            </div>
          </div>
         </div>
        <div class="overlay" style="display: block;"></div> 
    </main>
    <script src="../../js/local/doctor-dashboard/patient-api.js"></script>
</body>
</html>