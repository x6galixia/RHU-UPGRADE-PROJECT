<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/global/general.css" />
  <link rel="stylesheet" href="/css/local/patient-history.css" />
  <title>HealthSync</title>
  <link rel="shortcut icon" type="image/png" href="/img/global/healthvector.png" />
</head>

<body>
  <%- include("../includes/header.ejs") %>
    <main>
      <input type="hidden" id="patient-id" value="<%= patient_id %>">
      <h1 class="headings">PATIENT HISTORY</h1>
      <div class="history-container">
        <div class="b date-container" id="date-container">
        </div>
        <div class="b info-container">
          <!-- Patient information -->
          <h1 class="form-header">PATIENT INFORMATION</h1>
          <div class="patient-info">
            <div class="inputs">
              <label for="">Name:</label>
              <input type="text" id="name">
            </div>
            <div class="inputs">
              <label for="">Philhealth No:</label>
              <input type="text" id="phil_no">
            </div>
            <div class="inputs">
              <label for="">Suffix:</label>
              <input type="text" id="suffix">
            </div>
            <div class="inputs">
              <label for="">Mobile No.</label>
              <input type="text" id="phone">
            </div>
            <div class="inputs">
              <label for="">Birthdate:</label>
              <input type="date" id="birthdate">
            </div>
            <div class="inputs">
              <label for="">Email:</label>
              <input type="text" id="email">
            </div>
            <div class="inputs">
              <label for="">Gender:</label>
              <input type="text" id="gender">
            </div>
            <div class="inputs">
              <label for="">Occupation:</label>
              <input type="text" id="occupation">
            </div>
            <div class="inputs">
              <label for="">Guardian:</label>
              <input type="text" id="guardian">
            </div>
            <div class="inputs">
              <label for="">Address:</label>
              <input type="text" id="address">
            </div>
          </div>

          <!-- Medical records -->
          <h1 class="form-header m">MEDICAL RECORDS</h1>
          <div class="patient-info">
            <div class="inputs">
              <label for="">Height:</label>
              <input type="number" id="height">
            </div>
            <div class="inputs">
              <label for="">Temperature:</label>
              <input type="text" id="temperature">
            </div>
            <div class="inputs">
              <label for="">Weight:</label>
              <input type="text" id="weight">
            </div>
            <div class="inputs">
              <label for="">Heart Rate:</label>
              <input type="text" id="heart_rate">
            </div>
            <div class="inputs">
              <label for="">Systolic:</label>
              <input type="text" id="systolic">
            </div>
            <div class="inputs">
              <label for="">Diastolic:</label>
              <input type="text" id="diastolic">
            </div>
            <div class="inputs">
              <label for="">BMI:</label>
              <input type="text" id="bmi">
            </div>
            <div class="inputs">
              <label for="">Respiratory Rate:</label>
              <input type="text" id="respiratory_rate">
            </div>
            <div class="wide-inputs">
              <label for="">Comment:</label>
              <Textarea id="comment"></Textarea>
            </div>
          </div>

          <!-- laboratories -->
          <h1 class="form-header m">Laboratories </h1>
          <div class="patient-info">
            <div class="listing">
              <p>Categories</p>
              <ul id="categoryList">
              </ul>
            </div>
            <div class="listing">
              <p>Services</p>
              <ul id="serviceList">
              </ul>
            </div>
            <div class="listing ">
              <p>Lab. Result</p>
              <ul>
                <li>Lab result image</li>
              </ul>
            </div>
          </div>

          <!-- Prescriptions -->
          <h1 class="form-header m">Prescriptions</h1>
          <div class="m patient-info">
            <div class="listing">
              <p>Medicine</p>
              <ul id="medicineList">
              </ul>
            </div>
            <div class="listing">
              <p>Quantity</p>
              <ul id="quantityList">
              </ul>
            </div>
            <div class="listing">
              <p>Instruction</p>
              <ul id="instructionList">
              </ul>
            </div>
          </div>


          <!-- End of info-container-->
        </div>

        <!-- end of history container -->
      </div>
    </main>
    <script src="../../js/local/doctor-dashboard/patient-history-api.js"></script>
</body>

</html>