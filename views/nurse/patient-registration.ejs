<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/global/general.css" />
    <link rel="stylesheet" href="../css/local/patient-registration.css" />
    <title>Document</title>
</head>
<body>
    <%- include("../includes/header.ejs")  %>
    <h1 class="headings">PATIENT REGISTRATION</h1>
    <main>
        <div class="buttons">
            <div class="add-transfer">
              <button>RECENTLY ADDED</button>
              <button>HEALTH ASSESMENT</button>
            </div>
        </div>

        <!-- Parent container ./. -->
        <div class="container">

            <!-- Patient information na container :) -->
            <div class="sub-con patients-information-container">
                <img src="../icon/qr.svg" alt="">
                <div class="patient-head">
                    <h2 class="form-header">PATIEN INFORMATION</h2>
                </div>
                <div class="information">
                    <div class="r align">
                        <div>
                            <label for="uniqId">Unique ID:</label>
                            <input type="text">
                        </div>
                        <div class="b">
                            <button class="patient-button">Generate ID</button>
                            <button class="patient-button">Search</button>
                        </div>
                    </div>
                    <div class="r">
                        <div>
                            <label for="lastName">Last Name</label>
                            <input type="text">
                        </div>
                        <div>
                            <label for="firstName">First Name</label>
                            <input type="text">
                        </div>
                    </div>
                    <div class="r">
                        <div>
                            <label for="middleName">Middle Name</label>
                            <input type="text">
                        </div>
                        <div>
                            <label for="suffix">Suffix</label>
                            <input type="text">
                        </div>
                    </div>
                    <div class="r">
                        <div>
                            <label for="address">Address: <span class="add">House no, Purok, Brgy, Municipality</span></label>
                            <input type="text">
                        </div>
                    </div>
                    <div class="r">
                        <div>
                            <label for="birthDate">Birth date</label>
                            <input type="date">
                        </div>
                        <div>
                            <label for="Email">Email Address</label>
                            <input type="text">
                        </div>
                    </div>
                    <div class="r">
                        <div>
                            <label for="gender">Gender</label>
                            <select name="" id="">
                                <option value="gender" selected disabled>Gender</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                            </select>
                        </div>
                        <div>
                            <label for="guardian">Guardian</label>
                            <input type="text">
                        </div>
                    </div>
                    <div class="r">
                        <div>
                            <label for="date">Date</label>
                            <input type="date">
                        </div>
                        <div>
                            <label for="phoneNumber">Phone Number</label>
                            <input type="number">
                        </div>
                    </div>
                    <div class="r">
                        <div>
                            <label for="philhealth">PhilHealth No.</label>
                            <input type="number">
                        </div>
                        <div>
                            <label for="occupation">Occupation</label>
                            <input type="number">
                        </div>
                    </div>
                </div>
            </div>


            <!-- Vital sign na container :) -->
            <div class="sub-con vital-sign-container">
                <div class="patient-head">
                    <h2 class="form-header">VITALS SIGN</h2> 
                </div>
                <div class="information">
                    <div class="r">
                        <div>
                            <label for="height">Height in cm <span>*</span></label>
                            <input type="number">
                        </div>
                        <div>
                            <label for="weight">Weight in cm <span>*</span></label>
                            <input type="number">
                        </div>
                    </div>
                    <div class="r">
                        <div>
                            <label for="temperature">Temperature c <span>*</span></label>
                            <input type="number">
                        </div>
                        <div>
                            <label for="pulse">Pulse rate <span>*</span></label>
                            <input type="text">
                        </div>
                    </div>
                    <div class="r">
                        <div>
                            <label for="bpSystolic">BP Systolic <span>*</span></label>
                            <input type="text">
                        </div>
                        <div>
                            <label for="bpDiastolic">BP Diastolic <span>*</span></label>
                            <input type="text">
                        </div>
                    </div>
                    <div class="r">
                        <div>
                            <label for="respiratoryRate">Respiratory Rate <span>*</span></label>
                            <input type="text">
                        </div>
                        <div>
                            <label for="BMI">BMI <span>*</span></label>
                            <input type="text">
                        </div>
                    </div>
                    <div class="r">
                        <div>
                            <label for="complain">Chief Complain <span>*</span></label>
                            <textarea name="" id=""></textarea>
                        </div>
                    </div>
                </div>
                <div>
                    <button class="submit-button">Submit</button>
                </div>
            </div>
        </div>
    </main>
</body>
</html>